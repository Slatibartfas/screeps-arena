{
  "name": "screeps-arena",
  "version": "3.0.0",
  "description": "Out-of-the-box TypeScript boilerplate for Screeps Arena bots (rollup build, bundled typings, shared utilities).",
  "main": "index.js",
  "scripts": {
    "lint": "eslint \"src/**/*.ts\"",
    "format": "prettier --write --ignore-unknown --ignore-path .gitignore '**/*'",
    "build": "rollup -c --config-",
    "test": "npm run test-unit",
    "test-unit": "cross-env TS_NODE_PROJECT=tsconfig.test.json mocha -r ts-node/register -r tsconfig-paths/register \"test/unit/**/*.ts\"",
    "watch": "rollup -cw --config-"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Slatibartfas/screeps-arena.git"
  },
  "author": "Slatibartfas",
  "license": "Unlicense",
  "bugs": {
    "url": "https://github.com/Slatibartfas/screeps-arena/issues"
  },
  "homepage": "https://github.com/Slatibartfas/screeps-arena#readme",
  "engines": {
    "node": ">=16"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@types/chai": "^4.1.6",
    "@types/mocha": "^5.2.5",
    "@types/node": "^13.13.1",
    "@types/sinon": "^5.0.5",
    "@types/sinon-chai": "^3.2.0",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "chai": "^4.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "fast-glob": "^3.2.5",
    "mocha": "^5.2.0",
    "prettier": "^2.6.2",
    "rollup": "^2.6.1",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-typescript2": "^0.31.2",
    "sinon": "^6.3.5",
    "sinon-chai": "^3.2.0",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.6.3"
  },
  "dependencies": {}
}
